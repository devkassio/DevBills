{
  "name": "devbills-backend",
  "version": "1.0.0",
  "description": "Backend do DevBills com TypeScript",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "setup": "yarn install",
    "dev": "tsx watch src/server.ts",
    "dev:inspect": "tsx watch --inspect src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "tsx src/server.ts",
    "check": "biome check .",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "fix": "biome check --write .",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "keywords": [
    "typescript",
    "node",
    "backend"
  ],
  "author": "KÃ¡ssio Barros",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@types/node": "^24.10.0",
    "@types/pg": "^8.15.6",
    "prisma": "^7.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "mongodb": "^7.0.0",
    "pg": "^8.16.3"
  }
}
